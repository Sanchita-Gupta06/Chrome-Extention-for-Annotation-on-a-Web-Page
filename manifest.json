{
  "manifest_version": 3,
  "name": "Web Annotator",
  "version": "1.0",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "commands": {
    "highlight": {
      "suggested_key": {
        "default": "Ctrl+Shift+H"
      },
      "description": "Highlight selected text"
    },
    "add_note": {
      "suggested_key": {
        "default": "Ctrl+Shift+N"
      },
      "description": "Add a note to the selected text"
    },
    "export_annotations_pdf": {
      "suggested_key": {
        "default": "Ctrl+Shift+E"
      },
      "description": "Export annotations to PDF"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
